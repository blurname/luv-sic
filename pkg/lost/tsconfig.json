{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src/",
    "outDir": "./dist/",
    "noEmit": false,
    "composite": true,
    "experimentalDecorators":true,
    "useDefineForClassFields": false,
    "allowUnusedLabels": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "noImplicitAny": true,
    "jsx": "react"
  },
  "include": ["src/**/*.ts"]
}
